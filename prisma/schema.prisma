generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Currently using Neon
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) 
  username String @unique
  password String
  email String
  avatarUrl String
  createdAt DateTime
  role Role
}

enum Role {
  ADMIN
  USER
}